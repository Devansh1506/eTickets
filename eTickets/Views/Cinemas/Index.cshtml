@*Define Model*@
@model IEnumerable<Cinema>

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Cinemas";
}

@*Write Code*@

<div class="container ">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Logo)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <div class="d-flex justify-content-center align-items-center">
                                    <a class="btn btn-outline-primary me-2" href="#"><i class="bi bi-pencil-square"></i> Edit</a>
                                    <a class="btn btn-outline-info me-2" href="#"><i class="bi bi-eye"></i> Details</a>
                                    <a class="btn btn-danger" href="#"><i class="bi bi-trash"></i> Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>