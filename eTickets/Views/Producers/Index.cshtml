@*Define Model*@
@model IEnumerable<Producer>

@*Define ViewData*@
@{
    ViewData["Title"] = "List of Producers";
}

@*Write Code*@

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Bio)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.FullName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelitem => item.Bio)
                            </td>

                            <td>
                                <div class="d-inline-flex">
                                    <a class="btn btn-outline-primary me-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                                    <a class="btn btn-outline-info me-2" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Details</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@await Html.PartialAsync("_CreateItem","Producers")
